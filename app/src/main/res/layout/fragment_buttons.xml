<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"

    android:padding="16dp"
    tools:context=".ui.buttons.ButtonsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/btnGoToTextViewFragment"
            android:backgroundTint="#9A9090"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            style="@style/Circular"
            android:gravity="end"
            android:drawableStart="@drawable/ic_menu_camera"
            android:text="Ir a TextView Fragment" />

        <android.widget.Button
            android:background="@drawable/bg_rectangle"
            android:id="@+id/btnManageRadioButton"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Manejar Radio Button" />

        <android.widget.Button
            android:id="@+id/btnAddChip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="AÃ±adir Chips" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteY="205dp">

            <android.widget.RadioButton
                android:id="@+id/radioButton"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:buttonTint="@color/primary"
                android:text="Masculino" />

            <android.widget.RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:buttonTint="@color/primary"
                android:checked="true"
                android:text="Femenino"
                tools:ignore="HardcodedText"/>
        </RadioGroup>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip1"
                style="@style/chipsEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"

                app:chipIcon="@drawable/ic_fire" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motocicleta"
                tools:ignore="HardcodedText"
                app:chipIcon="@drawable/ic_motocycle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banana"
                tools:ignore="HardcodedText"
                app:chipIcon="@drawable/ic_water" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzana Chilena"
                tools:ignore="HardcodedText"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orange"
                tools:ignore="HardcodedText"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                tools:ignore="HardcodedText"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzana"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naranja"
                tools:ignore="HardcodedText"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platano"
                />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/btnActPayment"
            android:text="Ir a pagos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>